<h1>Listing urls</h1>

<table>
  <thead>
    <tr>
      <th>Original</th>
      <th>Shortened</th>
      <th>Clicks</th>
      <th></th>
      <% if user_signed_in? %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.original %></td>
        <td><%= polymorphic_url(:short, short: url.short) %></td>
        <td><%= url.clicks %></td>
        <td><%= link_to 'Info', polymorphic_url(:short, short: "#{url.short}+") %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<menu>
  <%= link_to 'Shorten a url', '/' %>
</menu>